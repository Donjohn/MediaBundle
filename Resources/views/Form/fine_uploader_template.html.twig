{% spaceless %}
<div class="qq-uploader-selector qq-uploader qq-gallery" qq-drop-area-text="{{ 'media.oneup.drop.files'|trans({},'DonjohnMediaBundle') }}" style="overflow: auto !important; overflow-x: hidden;">
    <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
        <span class="qq-upload-drop-area-text-selector"></span>
    </div>
    <div class="row progress qq-total-progress-bar-container-selector">
        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="progress-bar qq-total-progress-bar-selector"></div>
    </div>
    <div class="btn btn-primary qq-upload-button-selector">
        {{ 'media.oneup.upload.file'|trans({},'DonjohnMediaBundle') }}
    </div>

    <div class="qq-upload-list-selector row" role="region" aria-live="polite" aria-relevant="additions removals">
        <div class="col-lg-3 col-xs-6 col-md-3" style="overflow: hidden">
            <div  style="margin-top: 15px; min-height: 230px; max-height: 230px; background-color: rgb(255, 255, 255); border: 1px solid rgb(221, 221, 221); border-radius: 4px; display: block; line-height: 1.42857; margin-bottom: 20px; transition: border 0.2s ease-in-out 0s; overflow: hidden; padding:15px">
                <img class="img-thumbnail qq-thumbnail-selector" qq-max-size="100" qq-server-scale style="top: 0; transform: none;-moz-transform: none; ms-transform: none;-webkit-transform: none; max-height: 100px; min-height: 100px">


                <div class="qq-file-info caption">
                    <div class="qq-file-name">
                        <span class="qq-upload-file-selector qq-upload-file text-nowrap"></span>
                        <span class="qq-upload-size-selector qq-upload-size text-nowrap btn-block"></span>
                    </div>

                    <div class="text-center">
                        <img class="qq-upload-spinner-selector btn btn-default btn-xs" src="{{ asset('bundles/donjohnmedia/images/loading.gif') }}">
                        <button type="button" class="btn btn-default qq-upload-pause-selector btn-xs">
                            <span class="glyphicon glyphicon-pause fa fa-pause" aria-label="{{ 'media.oneup.pause'|trans({},'DonjohnMediaBundle') }}"></span>
                        </button>
                        <button type="button" class="btn btn-default qq-upload-continue-selector qq-upload-retry-selector btn-xs">
                            <span class="glyphicon glyphicon-repeat fa fa-upload" aria-label="{{ 'media.oneup.continue'|trans({},'DonjohnMediaBundle') }}"></span>
                        </button>
                        <button type="button" class="btn btn-default qq-upload-cancel-selector btn-xs">
                            <span class="glyphicon glyphicon-trash fa fa-remove" aria-label="{{ 'media.oneup.cancel'|trans({},'DonjohnMediaBundle') }}"></span>
                        </button>
                        <button type="button" class="btn btn-default qq-upload-delete-selector btn-xs">
                            <span class="glyphicon glyphicon-trash fa fa-trash-o" aria-label="{{ 'media.oneup.delete'|trans({},'DonjohnMediaBundle') }}"></span>
                        </button>
                    </div>
                </div>
                <div class="progress qq-progress-bar-container-selector">
                    <div class="progress-bar qq-progress-bar-selector" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endspaceless %}
